class FadeText {
      
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  
  float PosX;
  float PosY;
  String Text;
  float FadeTimer;
  int Style;
  float TextSize;
  color TextCol;
  float Time = 255;
  
  boolean SetupRunned = false;
  boolean Delete = false;
  
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

  FadeText(String D1, float D2, int D3, float D4, float D5, float D6, color D7) {
    Text = D1;
    FadeTimer = D2;
    Style = D3;
    TextSize = D4;
    PosX = D5;
    PosY = D6;
    TextCol = D7;
    
  }
  
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

  void Setup() {
    
    
  }
  
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  
  void Draw() {
    if (!SetupRunned) {
      Setup();
      SetupRunned = true;
      
    }
    
    Display();
    
  }
  
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  
  void Display() {
    if (Style == 0) {
      Text(Text, PosX, PosY, TextSize, color(TextCol, Time), 2);
      
    } else if (Style == 1) {
      textSize(TextSize);
      Rect(PosX, PosY, textWidth(Text) + TextSize, TextSize + TextSize, 2, color(0, Time), color(255, Time));
      Text(Text, PosX, PosY - TextSize/2, TextSize, color(TextCol, Time), 2);
      
    }
    Time -= FadeTimer;
    if (Time - FadeTimer < 0) {
      Style = -1;
      Delete = true;
      
    }
    
    if (Time <= 0) {
      Delete = true;
      
    }
    
  }
  
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  
}
