////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void settings() {
  size(ScreenWidth, ScreenHeight);
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void setup() {
  surface.setResizable(true);
  surface.setLocation(round(displayWidth/2 - ScreenWidth/2), round(displayHeight/2 - ScreenHeight/2));
  surface.setTitle(WindowName);
  PImage WindowIcon = loadImage("Assets/AllIcons/WindowIcon.png");
  surface.setIcon(WindowIcon);
  frameRate(60);
  PWidth = width;
  PHeight = height;
  
  SetWindowPosition();
  
  CPTWindow = new ControlPanelTab();
  FLWWindow = new FileLocationWindow();
  FOWWindow = new FileOutputWindow();
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void draw() {
  background(BackgroundCol);
  
  if (PWidth != width || PHeight != height)
    ResetWindowPosition();
  
  FOWWindow.Draw();
  FLWWindow.Draw();
  CPTWindow.Draw();
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void keyPressed() {
  KeyPressed = true;
  Keys[keyCode] = true;
  
  if (KeyTyped) {
    KeyTyped = false;
    
  }
  FLWWindow.KeyPressed();
  
  if (PrintKeys)
    println("key: " + key + ", keyCode: " + keyCode);
  
  //Print keys
  if (Keys[80] && Keys[17]) {
    println("Key printing now");
    if (PrintKeys)
      PrintKeys = false;
    else if (!PrintKeys)
      PrintKeys = true;
      
  }
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void keyTyped() {
  KeyTyped = true;
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void keyReleased() {
  KeyPressed = false;
  Keys[keyCode] = false;
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void mousePressed() {
  MousePressed = true;
  
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void mouseReleased() {
  MousePressed = false;
  
}
